"use strict"

define [
  "angular"
  "angular-ui-router"
], (angular) ->

  #config path for home page
  angular.module "main", ["ui.router"]
  .config [
    "$stateProvider"
    ($stateProvider) ->
      $stateProvider
        .state "main",
          abstract: true
          templateUrl: "<%= asset_path("layouts/main.html") %>"
          controller: "MainController"
  ]
  .controller "MainController", [
    "$scope"
    "$state"
    ($scope, $state)->
      # initialize
      $scope.state     = $state
      $scope.common =
        title: "Main title"
  ]
